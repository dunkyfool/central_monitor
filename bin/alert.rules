
ALERT InstanceDown
  IF sum(up{job="node-exporter"}) by (instance) == 0
  FOR 10s
  ANNOTATIONS {  
    summary = "Node is down!",
    description = "Instance {{ $label.instance }} is down"
  }                                                                                                   
  
ALERT LoseGPU
  IF sum(node_gpu_metrics{content="GPU_STATUS", instance!="localhost:9100"}) by (instance,devid) == 0
  FOR 10s
  ANNOTATIONS {  
    summary = "Lose GPU",
    description = "Instance {{ $label.instance }} lose GPU {{ $label.devid }}"
  }                                                                                                   
  
